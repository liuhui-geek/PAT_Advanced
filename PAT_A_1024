#include<iostream>
#include<map>
#include<string>
#include<sstream>
#include<algorithm>
using namespace std;
//判断是否是pal
bool ispal(string a) {
	int length = a.length();
	for (int i = 0; i < length / 2; i++) {
		if (a[i] != a[length - i -1]) {
			return false;
		}
	}
	return true;
}
//转置函数
string transfer(string b) {
	int length = b.length();
	for (int i = 0; i < length/2; i++) {
		char temp = b[i];
		b[i] = b[length - i - 1];
		b[length - i - 1] = temp;
	}
	return b;
}
string add(string a, string b) {
	int length = a.length();
	int flag = 0;
	for (int i = 0; i < length; i++) { 
		a[i] = a[i] + b[i] + flag - '0';
		flag = 0;
		if (a[i] > '9') {
			flag = 1;
			a[i] = a[i] - 10;
		}
	}
	if (flag) {
		a = a + '1';
	}
	return transfer(a);
}
int main() {
	string n;
	int k;
	cin >> n;
	cin	>> k;
	if (ispal(n)) {
		cout <<n<<endl;
		cout << 0;
	}
	else {
		for (int i = 1; i <= k; i++) {
			n = add(transfer(n),n);
			if (ispal(n)) {
				cout << n << endl;
				cout << i;
				break;
			}
			else if (i == k) {
				cout << n << endl;
				cout << i;
				break;
			}
		}
	}
	
	return 0;
}